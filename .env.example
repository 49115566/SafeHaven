# SafeHaven Connect Environment Configuration

# Backend Environment Variables (backend/.env)
AWS_REGION=us-east-1
STAGE=dev
JWT_SECRET=hackathon-jwt-secret-change-in-production
DYNAMODB_ENDPOINT=http://localhost:8000
CORS_ORIGIN=http://localhost:3000

# Dashboard Environment Variables (dashboard/.env)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_AWS_REGION=us-east-1
REACT_APP_AWS_LOCATION_MAP_NAME=safehaven-backend-map-dev
REACT_APP_AWS_LOCATION_PLACE_INDEX=safehaven-backend-places-dev
REACT_APP_ENVIRONMENT=development

# Mobile Environment Variables (mobile/.env)
API_BASE_URL=http://localhost:3001
WS_BASE_URL=ws://localhost:3001
REACT_APP_AWS_REGION=us-east-1
REACT_APP_AWS_LOCATION_MAP_NAME=safehaven-backend-map-dev
REACT_APP_AWS_LOCATION_PLACE_INDEX=safehaven-backend-places-dev
ENVIRONMENT=development

# Production Environment Variables
