{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(safehaven-shared)/)"
  ],
  "moduleNameMapper": {
    "^safehaven-shared$": "<rootDir>/../shared/types/index.ts"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "maxWorkers": 1,
  "workerIdleMemoryLimit": "512MB",
  "testTimeout": 10000,
  "clearMocks": true,
  "restoreMocks": true
}