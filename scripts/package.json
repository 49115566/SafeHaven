{
  "name": "safehaven-demo-scripts",
  "version": "1.0.0",
  "description": "Demo scripts and tests for SafeHaven Connect hackathon presentation",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:seed": "jest __tests__/seed-demo-data.test.js",
    "test:scenarios": "jest __tests__/demo-scenarios.test.js", 
    "test:setup": "jest __tests__/demo-setup.test.js",
    "test:integration": "jest __tests__/demo-integration.test.js"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "^2.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}