{
  "name": "safehaven-connect",
  "version": "1.0.0",
  "description": "Real-time emergency shelter and responder communication platform for FirstNet",
  "private": true,
  "workspaces": [
    "backend",
    "mobile",
    "dashboard",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:mobile && npm run install:dashboard && npm run install:shared",
    "install:backend": "cd backend && npm install",
    "install:mobile": "cd mobile && npm install",
    "install:dashboard": "cd dashboard && npm install",
    "install:shared": "cd shared && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:dashboard\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "dev:dashboard": "cd dashboard && npm run start",
    "build": "npm run build:shared && npm run build:backend && npm run build:dashboard",
    "build:backend": "cd backend && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "build:shared": "cd shared && npm run build",
    "deploy": "cd backend && npm run deploy",
    "test": "npm run test:backend && npm run test:dashboard && npm run test:mobile",
    "test:backend": "cd backend && npm test",
    "test:mobile": "cd mobile && npm test",
    "test:dashboard": "cd dashboard && npm test",
    "lint": "npm run lint:backend && npm run lint:mobile && npm run lint:dashboard",
    "lint:backend": "cd backend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:dashboard": "cd dashboard && npm run lint",
    "clean": "npm run clean:backend && npm run clean:mobile && npm run clean:dashboard",
    "clean:backend": "cd backend && npm run clean",
    "clean:mobile": "cd mobile && npm run clean",
    "clean:dashboard": "cd dashboard && npm run clean"
  },
  "devDependencies": {
    "@react-native-community/cli": "^20.0.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/49115566/SafeHaven.git"
  },
  "keywords": [
    "emergency-response",
    "firstnet",
    "public-safety",
    "real-time-communication",
    "aws-serverless",
    "react-native",
    "hackathon"
  ],
  "author": "Team SaveHaven",
  "license": "MIT"
}
